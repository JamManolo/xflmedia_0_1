%ul.scoring_fields
 %li
  %div.field
   %span.scoring_field_left
    = f.label :rec_tds_pts, "Receiving Touchdowns"
   %span.scoring_field_center
    %br
   %span.scoring_field_right
    \=
    = f.select :rec_tds_pts, (0..6), @title =~ /edit/i ? '' : :selected => 6
    pts
 %li
  %span.scoring_field_left
   = f.label :rec_rec_pts, "Receptions"
  %span.scoring_field_center
   %br
  %span.scoring_field_right
   \=
   = f.select :rec_rec_pts, (0..2)
   pts
 %li
  %span.scoring_field_left
   = f.label :rec_yds_min, "Receiving Yards Base"
  %span.scoring_field_center
   = f.select :rec_yds_min, [0, 50, 100]
   yds
  %span.scoring_field_right
   \=
   = f.select :rec_yds_min_pts, (0..5)
   pts
  %span.detail
   = link_to "Details", '/details/yardage', :rel => "external"
 %li
  %span.scoring_field_left
   = f.label :rec_yds_incr, "Receiving Yds Incremental"
  %span.scoring_field_center
   = f.select :rec_yds_incr, [10, 20, 25, 50, 100]
   yds
  %span.scoring_field_right
   \=
   = f.select :rec_yds_incr_pts, [0,1], @title =~ /edit/i ? '' : :selected => 1
   pt
 %li
  %span.scoring_field_left
   = f.label :rec_yds_bonus_min, "Receiving Yards Bonus"
  %span.scoring_field_center
   = f.select :rec_yds_bonus_min, [150,175,200]
   or more
  %span.scoring_field_right
   - f.label :rec_yds_bonus_min_pts
   \=
   = f.select :rec_yds_bonus_min_pts, (0..10)
   pts
  %span.detail
   = link_to "Details", '/details/yardage_bonus', :rel => "external"
 %li
  %span.scoring_field_left
   = f.label :rec_tds_pts, "Receiving TD Yards Bonus"
  %span.scoring_field_center
   = f.select :rec_tds_bonus_min, [40, 50, 60]
   or more
  %span.scoring_field_right
   \=
   = f.select :rec_tds_bonus_min_pts, (0..6)
   pts
  %span.detail
   = link_to "Details", '/details/yardage_bonus', :rel => "external"

